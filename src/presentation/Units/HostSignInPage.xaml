<Page xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" x:Class="presentation.HostSignInPage" Title="Host Sign In">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="Auto"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>
		<StackPanel Grid.Row="1" Grid.Column="1">
			<Image Width="128">
				<Image.Source>
					<BitmapImage DecodePixelWidth="128" UriSource="/images/octopus.png"/>
				</Image.Source>
			</Image>
			<TextBlock Text="Host Sign In" TextAlignment="Center" FontSize="24"/>
			<Rectangle Height="10"/>
			<TextBlock Text="Email"/>
			<TextBox x:Name="email" Width="300" FontSize="18" Height="30"/>
			<Rectangle Height="10"/>
			<TextBlock Text="Password"/>
			<PasswordBox x:Name="password" Width="300" FontSize="18" Height="30"/>
			<Rectangle Height="10"/>
			<Button Style="{StaticResource Big}" Click="SignIn">Sign In</Button>
			<Rectangle Height="10"/>
			<TextBlock Text="Dont have an account?"/>
			<Button Style="{StaticResource Big}" Click="SignUp">Sign Up</Button>
		</StackPanel>
	</Grid>
</Page>