<Page xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:MaterialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" TextElement.Foreground="{DynamicResource MaterialDesignBody}" TextElement.FontWeight="Medium" TextElement.FontSize="14" TextOptions.TextFormattingMode="Ideal" TextOptions.TextRenderingMode="Auto" Background="{DynamicResource MaterialDesignPaper}" FontFamily="{DynamicResource MaterialDesignFont}" x:Class="presentation.HostPage" Title="Hosting Units">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="10"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="10"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>
		<Grid Grid.Row="1">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="Auto"/>
			</Grid.ColumnDefinitions>
			<StackPanel Grid.Column="1" Orientation="Horizontal">
				<Grid>
					<Grid.RowDefinitions>
						<RowDefinition Height="*"/>
						<RowDefinition Height="Auto"/>
						<RowDefinition Height="*"/>
					</Grid.RowDefinitions>
					<StackPanel Grid.Row="1" Orientation="Horizontal">
						<TextBlock>WelcomeÂ </TextBlock>
						<TextBlock x:Name="host_name_textblock"></TextBlock>
					</StackPanel>
				</Grid>
				<Rectangle Width="10"/>
				<Button Click="SignOut">SIGN OUT</Button>
				<Rectangle Width="10"/>
			</StackPanel>
		</Grid>
		<Grid Grid.Row="3">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="6*"/>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>
			<Grid Grid.Column="1">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="Auto"/>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="Auto"/>
				</Grid.ColumnDefinitions>
				<StackPanel>
					<TextBlock FontSize="24">Hosting Units</TextBlock>
					<ListView ItemsSource="{Binding}">
						<ListView.View>
							<GridView>
								<GridViewColumn DisplayMemberBinding="{Binding ID}" Header="ID" Width="100"/>
								<GridViewColumn DisplayMemberBinding="{Binding UnitName}" Header="Name" Width="100"/>
								<GridViewColumn DisplayMemberBinding="{Binding City}" Header="City" Width="100"/>
							</GridView>
						</ListView.View>
					</ListView>
				</StackPanel>
			</Grid>
		</Grid>
	</Grid>
</Page>